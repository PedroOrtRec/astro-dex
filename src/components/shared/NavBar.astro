---
const links = [
  { name: "Listado", href: "/" },
  { name: "Listado Paginado", href: "/pokemons/1" },
  { name: "Favoritos", href: "/favorites" },
];

const currentPath = Astro.url.pathname;
---

<!-- component -->
<nav class="shadow bg-slate-700 mx-3 mt-3 rounded">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
  >
    {
      links.map(({href, name}) => (
        <div>
            <a
          href={href}
          class="text-gray-800 dark:text-gray-200 mx-1.5 sm:mx-6"
        >
          {name}
        </a>
        {
          currentPath === href ? (
            <div 
            transition:name="nav-underline"
            class="active" />
          ) : (
            <div class="inactive" />
          )
        }
        </div>
        
      ))
    }
  </div>
</nav>

<style>
  .active {
    @apply border-b-2 border-blue-500 mx-4
  }

  .inactive {
    @apply border-b-2 border-transparent
  }
</style>
